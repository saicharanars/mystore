{
  "files.maxMemoryForLargeFilesMB": 4096,
  "editor.formatOnSave": true,
  // File Exclusions
  "files.exclude": {
    "**/.git": true,
    "**/.idea": true,
    "**/.next": true,
    "**/.nx/cache": true,
    "**/.nx/workspace-data": true,
    "**/.sass-cache": true,
    "**/.vscode": true,
    "**/build": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/typings": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true,
    "**/build": true
  },
  "typescript.tsserver.log": "verbose",
  "files.autoSaveWorkspaceFilesOnly": false,
}